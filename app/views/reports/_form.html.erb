<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :screenshot, as: :text %>
    <%= f.input :logs, as: :text  %>
    <%= f.input :crash_logs, as: :text  %>
    <%= f.input :dumped_view, as: :text  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
